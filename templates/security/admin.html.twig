{% extends 'base.html.twig' %}


{% block title %} {{title}} {% endblock %}

{% block body %}
   


<div class="row">
  
   <div class="col-sm-3">
       
   </div>
   
   <div class= "col-sm-6">
            
        <h1>Ma page Admin</h1>
        
        <h2> Bonjour {{ app.user.username }} !</h2>
        
        <p>Lorem Ipsum {{ app.user.email }} </p>
        
        <p>Lorem Ipsum {{ app.user.password }} </p>
        
